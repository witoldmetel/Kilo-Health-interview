{
  "name": "kilo-rn-boilerplate",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "allow-bash": "chmod -R 744 ./scripts",
    "android": "npx react-native run-android",
    "clean": "yarn clean-deps && yarn clean-pods && yarn clean-gradle",
    "clean-deps": "rm -rf node_modules && yarn install",
    "clean-gradle": "cd android && ./gradlew clean cleanBuildCache",
    "clean-pods": "cd ios && pod deintegrate && pod install",
    "inc": "./scripts/incVersion.sh",
    "ios": "npx react-native run-ios",
    "lint": "eslint src/",
    "lint-fix": "eslint --fix ./src",
    "prettier": "prettier --write '{src,__tests__}/**/*.{ts,tsx,js,jsx}'",
    "rename": "yarn react-native-rename",
    "restart": "yarn && yarn pod-install && yarn start",
    "start": "npx react-native start --reset-cache",
    "test": "jest --config='./jest.config.json' --detectOpenHandles",
    "test-cov": "jest --config='./jest.config.json' --collectCoverageFrom='src/**/*.js'",
    "type-check": "tsc --noEmit",
    "postversion": "yarn react-native-version -t ios,android --generate-build -a",
    "version-app": "yarn react-native-version -r -A -t ios,android"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "lint-staged": {
    "package.json": [
      "sort-package-json"
    ],
    "*.{md,yml}": [
      "prettier --write"
    ],
    "src/**/*.{ts,tsx,js,jsx}": [
      "yarn prettier",
      "yarn lint-fix",
      "yarn lint"
    ],
    "src/**/__tests__/**/*.{js,jsx}": [
      "yarn test-cov",
      "node ./node_modules/.bin/jest-badges-readme",
      "git add 'README.md'"
    ]
  },
  "jest": {
    "preset": "react-native"
  },
  "dependencies": {
    "@babel/eslint-parser": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "@react-native-community/async-storage": "^1.12.1",
    "@react-native-community/masked-view": "^0.1.10",
    "@react-native-community/netinfo": "^8.2.0",
    "@react-native-firebase/analytics": "^14.7.0",
    "@react-native-firebase/app": "14.7.0",
    "@react-native-firebase/auth": "14.7.0",
    "@react-native-firebase/remote-config": "14.7.0",
    "@react-navigation/bottom-tabs": "^6.3.1",
    "@react-navigation/native": "^6.0.10",
    "@react-navigation/stack": "^6.2.1",
    "@reduxjs/toolkit": "^1.8.1",
    "@sentry/react-native": "^3.4.0",
    "@types/date-fns": "^2.6.0",
    "axios": "^0.26.1",
    "formik": "^2.2.6",
    "i18next": "^20.2.1",
    "immutability-helper": "^3.1.1",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.21",
    "prop-types": "^15.8.1",
    "react": "17.0.2",
    "react-i18next": "^11.16.2",
    "react-native": "0.67.4",
    "react-native-blob-util": "0.14.1",
    "react-native-bootsplash": "^4.1.4",
    "react-native-branch": "^5.4.0",
    "react-native-date-picker": "^4.2.0",
    "react-native-device-info": "8.7.0",
    "react-native-fast-image": "^8.5.11",
    "react-native-flipper": "0.125.0",
    "react-native-gesture-handler": "^2.9.0",
    "react-native-image-progress": "^1.2.0",
    "react-native-keyboard-aware-scroll-view": "^0.9.5",
    "react-native-linear-gradient": "^2.5.6",
    "react-native-reanimated": "^2.5.0",
    "react-native-render-html": "^6.3.4",
    "react-native-safe-area-context": "^4.2.4",
    "react-native-screens": "^3.13.1",
    "react-native-snap-carousel": "^3.9.1",
    "react-native-svg": "^12.3.0",
    "react-native-svg-charts": "^5.4.0",
    "react-native-svg-transformer": "^1.0.0",
    "react-native-vector-icons": "^9.1.0",
    "react-redux": "^7.2.7",
    "redux": "^4.1.2",
    "redux-persist": "^6.0.0",
    "redux-persist-filesystem-storage": "^4.0.0",
    "redux-saga": "^1.1.3",
